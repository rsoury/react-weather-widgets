* 
	box-sizing: border-box
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	font-family 'Helvetica', sans-serif
#app
	background-color: rgb(240, 240, 240) !important;
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
header
	max-width: 750px;
	margin: 0 auto;
	border: 1px solid rgb(220, 220, 220);
	padding: 10px;
	background-color: #fff;
	border-top: 0;
	box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
	border-radius 0 0 4px 4px
	position relative
	z-index 100
	& > div
		width: 50%;
		display: inline-block;
		text-align: center;
		padding 0 20px
		& select
			width 100%
		& button
			width 100%
			height 100%
			box-shadow none
			background-color #fff
			padding 5px 20px
			border-radius 4px
			border 1px solid #000
			outline 0
			transition background-color 0.15s
			&:hover
				background-color rgb(220, 220, 220) !important
				cursor pointer
			&:active
				background-color rgb(180, 180, 180) !important
				
.widget
	display: inline-block;
	margin: 5px;
	border: 1px solid rgb(180, 180, 180);
	background-color: #fff;
	width 500px
	text-align center
	border-radius 4px
	& .widget-header
		padding 10px;
		background-color rgb(30, 30, 30)
		color #fff
	& .widget-body
		padding 10px
		& > table td
			width 33.33%
		& .widget-primary-icon
			max-width 200px
		& .widget-primary-temp
			font-size 56px
	& .widget-daily
		padding 10px 0
		border-top 1px solid rgb(230, 230, 230)
		& .widget-day
			margin-bottom 5px
			opacity 0.5
		& table td
			border-right: 1px solid rgb(230, 230, 230);
			&:last-child
				border none
	& .widget-loader
		position relative
		top 50%
		transform translateY(-50%)
	